<h1>New Post</h1>

<%= form_with url: posts_path, method: :post, local: true do |form| %>
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
  </p>

  <%= form.submit "Create Post" %>
<% end %>

